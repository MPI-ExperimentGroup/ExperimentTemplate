                        </goals>
                        <configuration>
                            <!-- the recorder jars are now taken directly from the git repository rather than via webjars ,META-INF/resources/**/recorder.min.js -->
                            <includes>META-INF/resources/**/jquery.min.js,META-INF/resources/**/sockjs.min.js,META-INF/resources/**/stomp.min.js,META-INF/resources/webjars/bootstrap/**/css/bootstrap.min.css</includes>
                            <outputDirectory>${project.build.directory}/webjars</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
