<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<experiment appNameDisplay="WellspringsSamoan" appNameInternal="wellspringssamoan" backgroundColour="#e8faff " complementColour0="#EAC3A3" complementColour1="#9D7B5E" complementColour2="#C69E7C" complementColour3="#FFEDDE" complementColour4="#FFFDFB" primaryColour0="#628D8D" primaryColour1="#385E5E" primaryColour2="#1eb0b0" primaryColour3="#c1eaea" primaryColour4="#daf2f9" showMenuBar="true" textFontSize="15">
    <metadata>
        <field controlledMessage="Please enter at least three letters." controlledRegex=".'{'3,'}'" postName="workerId" preventServerDuplicates="false" registrationField="Igoa/suafa (name)"/>
        <field controlledMessage="Please enter at least three letters." controlledRegex=".'{'3,'}'" postName="villageString" preventServerDuplicates="false" registrationField="Nu'u (village)"/>
        <field controlledMessage="Please enter at least three letters." controlledRegex=".'{'3,'}'" postName="genderString" preventServerDuplicates="false" registrationField="tama’ita’i po ’o le ali’i (gender)"/>
        <field controlledMessage="Please enter at least three letters." controlledRegex=".'{'3,'}'" postName="yearString" preventServerDuplicates="false" registrationField="Tausaga o le fanau (year of birth)"/>
    </metadata>
    <presenter displayOrder="1" menuLabel="Afio mai (welcome)" type="menu" self="Afio mai (welcome)" title="Afio mai (welcome)">
        <menuItem featureText="Fa'atonuga (instructions)" target="Fa_atonuga__instructions_"/>
        <menuItem featureText="'Āmata i le taimi lava (start right away)" target="Start"/>
    </presenter>
    <presenter back="A'e (back)" displayOrder="2" menuLabel="Start" next="Edit_User" type="metadata" self="Start" title="Start">
        <existingUserCheck>
            <multipleUsers>
                <plainText featureText="Pu'e le tagata fou (record new person)"/>
                <createUserButton featureText="Fou" target="Edit_User"/>
                <addPadding/>
                <plainText featureText="Pu'e le tagata tuai (Record existing)"/>
                <targetButton featureText="pu'eina tuai" target="SelectUser"/>
            </multipleUsers>
            <singleUser>
                <autoNextPresenter/>
            </singleUser>
        </existingUserCheck>
    </presenter>
    <presenter back="A'e (back)" displayOrder="3" menuLabel="Fa’atonuga (instructions)" type="text" self="Fa_atonuga__instructions_" title="Fa’atonuga (instructions)">
        <htmlText featureText="This application will make a recording of you. The recording will be archived at the ANU and it will be possible for other people in the world to hear what you say."/>
        <targetButton featureText="'Ōukei, 'āmata (Ok, start)" hotKey="SPACE" target="Start"/>
    </presenter>
    <presenter back="A'e (back)" displayOrder="4" menuLabel="Information for interviewee" next="Fa_atagaga__consent_" type="metadata" self="Edit_User" title="Information for interviewee">
        <metadataField fieldName="workerId"/>
        <metadataFieldConnection fieldName="connectionString" linkedFieldName="workerId"/>
        <saveMetadataButton featureText="Save information" sendData="false" networkErrorMessage="Could not contact the server, please check your internet connection and try again.">
            <onError/>
            <onSuccess>
                <autoNextPresenter/>
            </onSuccess>
        </saveMetadataButton>
    </presenter>
    <presenter back="A'e (back)" displayOrder="5" menuLabel="Select User" next="Fa_atagaga__consent_" type="metadata" self="SelectUser" title="Select User">
        <selectUserMenu/>
    </presenter>
    <presenter back="A'e (back)" displayOrder="6" menuLabel="Fa’atagaga (consent)" next="MetadataScreen" type="metadata" self="Fa_atagaga__consent_" title="Fa’atagaga (consent)">
        <htmlText featureText=" ’E te malie ’e pu’e le fa’atalanoaga lenei? (Do you agree to this interview being audio taped?)&lt;br/&gt;&lt;br/&gt;’E te malie ’e fa’aaogā mea ia ’ua pu’e ’e isi tagata ’i nei ma so’o se isi vāega o le lalolagi e fa’alogologo ma matamata, ’ina ’ia mafai ’ona o lātou fa’alogologo ’iā ’oe ’o tautala ’i lau gagana ma fa’amatala au tala? (Are you happy for these recordings to be made available for other people, here and in other parts of the world, to listen to and watch, so they can hear you speaking your language and telling your stories?)&lt;br/&gt;&lt;br/&gt;’E te mālamalama ’a fa’apea ’e toe sui lou māfaufau ’e tapē le pu’ega ’o au fa’amatalaga, ’e mafai ’ona ’e ta’ua ’iā Heti ’ae le’i toe fo’i ’i Kenipera ’ina ’ia mafai ’ona tapē ’ese ma lē teua? (Do you understand that if you change you mind and want to close off the recordings, you can tell Heti before she goes back to Canberra so that she can delete them and not put them in the archive?)"/>
        <targetButton featureText="Ioe (yes)" target="MetadataScreen"/>
    </presenter>
    <presenter back="A'e (back)" displayOrder="7" menuLabel="Metadata" next="Stimulus" type="stimulus" self="MetadataScreen" title="Metadata">
        <loadAllStimulus eventTag="Metadata" randomise="false" repeatRandomWindow="0" repeatCount="1">
            <hasMoreStimulus>
                <startAudioRecorder eventTag="Metadata" wavFormat="true" filePerStimulus="false"/>
                <startAudioRecorderTag eventTier="1"/>
                <showStimulusProgress/>
                <stimulusLabel/>
                <actionButton featureText="Fa’asolo (continue)">
                    <endAudioRecorderTag eventTier="1" eventTag=""/>
                    <nextStimulus eventTag="nextStimulusMetadata" repeatIncorrect="false"/>
                </actionButton>
            </hasMoreStimulus>
            <endOfStimulus>
                <stopAudioRecorder/>
                <autoNextPresenter/>
            </endOfStimulus>
            <stimuli>
                <tag>metadata</tag>
            </stimuli>
        </loadAllStimulus>
    </presenter>
    <presenter back="Afio_mai__welcome_" displayOrder="8" menuLabel="Va’ai i le ata (look at the picture)" type="stimulus" self="Stimulus" title="Va’ai i le ata (look at the picture)">
        <loadSdCardStimulus eventTag="Va’ai i le ata (look at the picture)" randomise="false" repeatRandomWindow="0" maxStimuli="1000" repeatCount="1">
            <hasMoreStimulus>
                <startAudioRecorder eventTag="Va’ai i le ata (look at the picture)" wavFormat="true" filePerStimulus="true"/>
                <startAudioRecorderTag eventTier="1"/>
                <centrePage/>
                <stimulusLabel/>
                <showStimulusProgress/>
                <stimulusImage msToNext="0" maxHeight="80" percentOfPage="80" maxWidth="80">
                    <plainText featureText="Askem long man o woman wea i toktok se i talem nem blong wanem i stap lo foto long lanwis blong hem."/>
                    <actionButton featureText="’Uma (finished)">
                        <endAudioRecorderTag eventTier="1" eventTag="Askem long man o woman wea i toktok se i talem nem blong wanem i stap lo foto long lanwis blong hem."/>
                        <clearPage/>
                        <nextStimulus eventTag="nextImage" repeatIncorrect="false"/>
                    </actionButton>
                </stimulusImage>
            </hasMoreStimulus>
            <endOfStimulus>
                <plainText featureText="’Uma (finished)"/>
                <targetButton featureText="A'e (back)" target="A'e (back)"/>
            </endOfStimulus>
            <stimuli>
                <tag>Ata_pictures_</tag>
            </stimuli>
        </loadSdCardStimulus>
    </presenter>
    <presenter displayOrder="9" menuLabel="About Screen" type="debug" self="about" title="About Screen">
        <versionData/>
        <eraseLocalStorageButton/>
        <localStorageData/>
    </presenter>
    <stimuli>
        <stimulus identifier="Igoa/suafa atoa ’o lē ’olo’o faia le fa’atalanoaga, nofaga ma aso o le talanoaga (full name of interviewee and location and date)" label="Igoa/suafa atoa ’o lē ’olo’o faia le fa’atalanoaga, nofaga ma aso o le talanoaga (full name of interviewee and location and date)" pauseMs="0">
            <tag>metadata</tag>
        </stimulus>
        <stimulus identifier="Igoa/suafa atoa ’o lē ’olo’o fa’atalanoa (full name of interviewee)" label="Igoa/suafa atoa ’o lē ’olo’o fa’atalanoa (full name of interviewee)" pauseMs="0">
            <tag>metadata</tag>
        </stimulus>
                <stimulus identifier="Suafa matai (matai name of interviewee)" label="Suafa matai (matai name of interviewee)" pauseMs="0">
            <tag>metadata</tag>
        </stimulus>

        <stimulus identifier="Ata (pictures)" imagePath="Ata (pictures)" label="Ata (pictures)" pauseMs="0">
            <tag>Ata_pictures_</tag>
        </stimulus>
    </stimuli>
</experiment>
